rules_version = '2';

// Firebase Storage Rules - Copattes
// Deployment: firebase deploy --only storage

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isValidImageUpload() {
      return request.resource.size < 10 * 1024 * 1024 // 10MB max
          && request.resource.contentType.matches('image/.*');
    }
    
    // =============================================================================
    // PRODUCTION RULES (Recommended)
    // =============================================================================
    
    // User profile photos: users/{userId}/profile/{filename}
    match /users/{userId}/profile/{filename} {
      allow read: if true; // Public read for profile pictures
      allow write: if isOwner(userId) && isValidImageUpload();
      allow delete: if isOwner(userId);
    }
    
    // Pet photos: users/{userId}/pets/{petId}/{filename}
    match /users/{userId}/pets/{petId}/{filename} {
      allow read: if true; // Public read for pet pictures
      allow write: if isOwner(userId) && isValidImageUpload();
      allow delete: if isOwner(userId);
    }
    
    // Product photos: users/{userId}/products/{productId}/{filename}
    match /users/{userId}/products/{productId}/{filename} {
      allow read: if true; // Public read for products
      allow write: if isOwner(userId) && isValidImageUpload();
      allow delete: if isOwner(userId);
    }
    
    // Post photos: users/{userId}/posts/{postId}/{filename}
    match /users/{userId}/posts/{postId}/{filename} {
      allow read: if true; // Public read for community posts
      allow write: if isOwner(userId) && isValidImageUpload();
      allow delete: if isOwner(userId);
    }
    
    // Lost & Found photos: users/{userId}/lost-found/{reportId}/{filename}
    match /users/{userId}/lost-found/{reportId}/{filename} {
      allow read: if true; // Public read for lost/found reports
      allow write: if isOwner(userId) && isValidImageUpload();
      allow delete: if isOwner(userId);
    }
    
    // Challenge submission photos: users/{userId}/challenges/{challengeId}/{filename}
    match /users/{userId}/challenges/{challengeId}/{filename} {
      allow read: if true; // Public read for challenge submissions
      allow write: if isOwner(userId) && isValidImageUpload();
      allow delete: if isOwner(userId);
    }
    
    // Fallback: deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
